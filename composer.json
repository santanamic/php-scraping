{
    "name": "santanamic/php-scraping",
    "type": "library",
    "description": "",
    "keywords": [
        "php-scraping",
        "php-scraping"
    ],
    "homepage": "https://github.com/santanamic/php-scraping",
    "license": "MIT",
    "authors": [
        {
            "name": "Willian Santana",
            "email": "williansantana@sapo.pt",
            "homepage": "https://github.com/santanamic",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PHPScraping\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPScraping\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
